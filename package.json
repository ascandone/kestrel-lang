{
  "name": "kestrel-lang",
  "version": "0.0.26",
  "description": "A pure, strongly typed functional language that compiles to js",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "bin": {
    "kestrel": "./dist/cli/main.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "gen:parser": "ohm generateBundles --withTypes src/parser/grammar.ohm",
    "test:watch": "vitest",
    "test:w": "npm run test:watch",
    "test:run": "vitest --run --coverage",
    "ts:build": "tsc --project tsconfig.build.json",
    "ts:watch": "tsc --watch",
    "ts:check": "tsc --noEmit",
    "format:check": "prettier --check --cache ./**/*.ts",
    "format:write": "prettier --write --cache ./**/*.ts",
    "linter:check": "eslint .",
    "build": "npm run ts:build"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "ohm-js": "^17.1.0",
    "ts-decode": "^0.0.14",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@ohm-js/cli": "^2.0.0",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.5.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.1",
    "typescript": "^5.3.3",
    "vitest": "^1.5.0"
  }
}
